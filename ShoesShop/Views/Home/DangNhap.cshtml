@model ShoesShop.Models.ACCOUNT
@{
    <title>Đăng nhập | VLTH Store</title>
    Layout = null;
}
<link href="~/Areas/Assets/vendor/fontawesome-free/css/all.min.css" rel="stylesheet" type="text/css">
<link href="https://fonts.googleapis.com/css?family=Nunito:200,200i,300,300i,400,400i,600,600i,700,700i,800,800i,900,900i"
      rel="stylesheet">
<!-- Custom styles for this template-->
<link href="~/Areas/Assets/css/sb-admin-2.min.css" rel="stylesheet">
<link href="~/Images/iconWeb.png" rel="shortcut icon" />

@using (Html.BeginForm("DangNhap", "Home", FormMethod.Post))
{
    @Html.AntiForgeryToken()
    <div class="form-horizontal">
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })

        <div class="container ">

            <!-- Outer Row -->
            <div class="row justify-content-center">

                <div class="col-xl-10 col-lg-12 col-md-9">

                    <div class="card o-hidden border-0 shadow-lg my-5">
                        <div class="card-body p-0">
                            <!-- Nested Row within Card Body -->
                            <div class="row">
                                <div class="col-lg-6 d-none d-lg-block bg-login-image"></div>
                                <div class="col-lg-6">
                                    <div class="p-5">
                                        <div class="text-center">
                                            <h1 class="h4 text-gray-900 mb-4">Welcome Back!</h1>
                                            @if (@ViewData["ER"] == null)
                                            {
                                                <p class="text-center text-danger   " style="margin:10px auto; border:1px solid #ff0000;visibility:hidden;">@ViewData["ER"] </p>
                                            }
                                            else 
                                            { 
                                                <p class="text-center text-danger   " style="margin:10px auto; border:1px solid #ff0000;">@ViewData["ER"] </p>
                                            }
                                            
                                        </div>
                                        <form class="user">
                                            <div class="form-group">
                                                <label class="control-label col-md-7" for="MatKhauXacNhan">
                                                    Tên đăng nhập:
                                                </label>
                                                <div class="col-md-11 ">
                                                    @Html.EditorFor(model => model.UserName, new { htmlAttributes = new { @class = "form-control " } })
                                                    @Html.ValidationMessageFor(model => model.UserName, "", new { @class = "text-danger" })
                                                    <span class="text-danger">
                                                        @ViewData["ChuaNhapUserName"]
                                                    </span>
                                                </div>
                                            </div>
                                            <div class="form-group">
                                                <label class="control-label col-md-7" for="MatKhauXacNhan">
                                                   Mật khẩu:
                                                </label>
                                                <div class="col-md-11">
                                                    @Html.EditorFor(model => model.Password, new { htmlAttributes = new { type = "Password", @class = "form-control" } })
                                                    @Html.ValidationMessageFor(model => model.Password, "", new { @class = "text-danger" })
                                                    <span class="text-danger">
                                                        @ViewData["ChuaNhapPassword"]
                                                    </span>
                                                </div>
                                            </div>
                                            <div class="form-group">
                                                <div class="custom-control custom-checkbox small">
                                                    <input type="checkbox" class="custom-control-input" id="customCheck">
                                                    <label class="custom-control-label" for="customCheck">
                                                        Remember
                                                        Me
                                                    </label>
                                                </div>
                                            </div>
                                            <input type="submit" value="Đăng nhập" class="btn btn-primary btn-user " />
                                            @Html.ActionLink("Hủy", "Index", "Home", new { id = "" }, new { @class = "btn btn-primary" })

                                        </form>
                                        <hr>
                                        <div class="text-center">
                                            <a class="small" href="forgot-password.html">Forgot Password?</a>
                                        </div>
                                        <div class="text-center">
                                            <a class="small" href="@Url.Action("DangKy","Home")">Đăng ký tài khoản</a>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>

                </div>

            </div>
        </div>
    </div>
}
<style>
    body {
        background: cadetblue
    }
</style>