@model IEnumerable<ShoesShop.Models.CHITIETDONHANG>
@{
    ViewBag.Title = "Đơn hàng";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<table class="table">
    <tr>
        <th>
            Tên sản phẩm
        </th>
        <th>
            Hình ảnh
        </th>
        <th>
            Đơn giá
        </th>
        <th>
            Số lượng
        </th>
        <th>
            Thành tiền
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Size)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.SANPHAM.TenSanPham)
            </td>
            <td>
                <img src="@Url.Content("~/Images/" +item.SANPHAM.HinhAnh)" width="50" height="50" />
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DonGia)<strong> USD</strong>
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.SoLuong)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.TongTien)<strong> USD</strong>
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Size)
            </td>
        </tr>
    }


</table>
<div class="back-to-shop"><a href="@Url.Action("XemDonHang", "GioHang")">&leftarrow;</a><span class="text-muted">Quay lại</span></div>

