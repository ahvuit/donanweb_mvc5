@model IEnumerable<ShoesShop.Models.QUYEN>

@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}

<div class="card">
    <div class="card-header">
        <div class="row">
            <div class="col-md-6">
                <strong class="text-danger text-uppercase">Quản lý phân quyền</strong>
            </div>
            <div class="col-md-6 text-right">
                <a href="@Url.Action("Create","PhanQuyen")" class="btn btn-sm btn-success"> <i class="fas fa-plus"></i> Thêm Mới</a>
            </div>
        </div>
    </div>
    <div class="card-body">
        <table class="table">
            <tr>
                <th>
                    Tên Quyền
                </th>
                <th></th>
            </tr>

            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.TenQuyen)
                    </td>
                    <td>
                        <a href="@Url.Action("Edit", "PhanQuyen", new { id = item.MaQuyen })" class="btn btn-sm btn-info"> <i class="fas fa-edit"></i> Sửa </a>
                        <a href="@Url.Action("Details", "PhanQuyen", new { id = item.MaQuyen })" class="btn btn-sm btn-primary"> <i class="fas fa-eye"> Xem </i></a>
                        <a href="@Url.Action("Delete", "PhanQuyen", new { id = item.MaQuyen })" class="btn btn-sm btn-danger"> <i class="fas fa-trash"></i> Xóa </a>
                    </td>
                </tr>
            }

        </table>

    </div>
</div>

