@model ShoesShop.Models.KHUYENMAI

@{
    ViewBag.Title = "Delete";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}

<div>
    <div class="col-md-6">
        <strong class="text-danger text-uppercase">Xóa khuyến mãi</strong>
    </div>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            Ngày bắt đầu
        </dt>

        <dd>
            @Html.DisplayFor(model => model.NgayBatDau)
        </dd>

        <dt>
            Ngày kết thúc
        </dt>

        <dd>
            @Html.DisplayFor(model => model.NgayKetThuc)
        </dd>

        <dt>
            Tên khuyến mãi
        </dt>

        <dd>
            @Html.DisplayFor(model => model.TenKhuyenMai)
        </dd>

        <dt>
            Ngày tạo
        </dt>

        <dd>
            @Html.DisplayFor(model => model.NgayTao)
        </dd>

        <dt>
            Nội dung khuyến mãi
        </dt>

        <dd>
            @Html.DisplayFor(model => model.NoiDungKM)
        </dd>

    </dl>

    @using (Html.BeginForm()) {
        @Html.AntiForgeryToken()

        <div class="form-actions no-color">
            <input type="submit" value="Delete" class="btn btn-default" /> |
            @Html.ActionLink("Back to List", "Index")
        </div>
    }
</div>
