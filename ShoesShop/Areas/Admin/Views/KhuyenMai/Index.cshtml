@model IEnumerable<ShoesShop.Models.KHUYENMAI>

@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}

<div class="card">
    <div class="card-header">
        <div class="row">
            <div class="col-md-6">
                <strong class="text-danger text-uppercase">Quản lý khuyến mãi</strong>
            </div>
            <div class="col-md-6 text-right">
                <a href="@Url.Action("Create","KhuyenMai")" class="btn btn-sm btn-success"> <i class="fas fa-plus"></i> Thêm Mới</a>
            </div>
        </div>
    </div>
    <div class="card-body">
        <table class="table">
            <tr>
                <th>
                    Tên khuyến mãi
                </th>
                <th>
                    Ngày tạo
                </th>
                <th>
                    Nội dung khuyến mãi
                </th>
                <th></th>
            </tr>

            @foreach (var item in Model)
            {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.TenKhuyenMai)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.NgayTao)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.NoiDungKM)
            </td>
            <td>
                <a href="@Url.Action("Edit", "KhuyenMai", new { id = item.MaKhuyenMai })" class="btn btn-sm btn-info"> <i class="fas fa-edit"></i> Sửa </a>
                <a href="@Url.Action("Details", "KhuyenMai", new { id = item.MaKhuyenMai })" class="btn btn-sm btn-primary"> <i class="fas fa-eye"> Xem </i></a>
                <a href="@Url.Action("Delete", "KhuyenMai", new { id = item.MaKhuyenMai })" class="btn btn-sm btn-danger"> <i class="fas fa-trash"></i> Xóa </a>
            </td>
        </tr>
            }

        </table>

    </div>
</div>

