@model PagedList.IPagedList<ShoesShop.Models.DONDATHANG>
@using PagedList.Mvc;
@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}
<link href="~/Content/Css/CssPage/style.css" rel="stylesheet" />
<div class="card">
    <div class="card-header">
        <div class="row">
            <div class="col-md-6">
                <strong class="text-danger text-uppercase">Quản lý Đơn Hàng</strong>
            </div>
        </div>
    </div>
    <div class="card-body">
        <table class="table">
            <tr>
                <th>
                    Ngày đặt
                </th>
                <th>
                    Ngày giao
                </th>
                <th>
                    Tên khách hàng
                </th>
                <th>
                    Địa chỉ
                </th>
                <th>
                    Số điện thoại
                </th>
                <th>
                    Email
                </th>
                <th>
                    Ghi chú
                </th>
                <th>
                    Tổng tiền
                </th>
                <th>
                    Tình trạng
                </th>
                <th>
                    Thanh Toán
                </th>
                <th></th>
            </tr>

            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.NgayDat)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.NgayGiao)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Hoten)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.DiaChi)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.SDT)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Email)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.GhiChu)
                    </td>
                    <td>
                        @String.Format("{0:0,0}", item.TongTien) USD
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.TINHTRANG.TinhTrangGiao)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.ThanhToan)
                    </td>
                    <td>
                        <a href="@Url.Action("Edit", "DonDatHang", new { id = item.MaDDH })" class="btn btn-sm btn-info"> <i class="fas fa-edit"></i> Sửa </a>
                        <a href="@Url.Action("Details", "DonDatHang", new { id = item.MaDDH })" class="btn btn-sm btn-primary"> <i class="fas fa-eye"> Xem </i></a>
                    </td>
                </tr>
            }

        </table>

    </div>
</div>
<div>
    Trang @(Model.PageCount < Model.PageNumber ? 0 : Model.PageNumber) / @Model.PageCount

    @Html.PagedListPager(Model, page => Url.Action("Index",
                     new { page }))
</div>
