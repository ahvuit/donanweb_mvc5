@model IEnumerable<ShoesShop.Models.CHITIETDONHANG>

@{
    ViewBag.Title = "Details";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}
<table class="table">
    <tr>
        <th>
            Tên sản phẩm
        </th>
        <th>
            Hình ảnh
        </th>
        <th>
            Đơn giá
        </th>
        <th>
            Số lượng
        </th>
        <th>
            Thành tiền
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Size)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
<tr>
    <td>
        @Html.DisplayFor(modelItem => item.SANPHAM.TenSanPham)
    </td>
    <td>
        <img src="@Url.Content("~/Images/" +item.SANPHAM.HinhAnh)" width="50" height="50" />
    </td>
    <td>
        @String.Format("{0:0,0}", item.DonGia) USD
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.SoLuong)
    </td>
    <td>
        @String.Format("{0:0,0}", item.TongTien) USD
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.Size)
    </td>
</tr>
    }

</table>
