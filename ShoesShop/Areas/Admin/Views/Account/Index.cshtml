@model IEnumerable<ShoesShop.Models.ACCOUNT>

@{
    ViewBag.Title = "Account";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}
<div class="card">
    <div class="card-header">
        <div class="row">
            <div class="col-md-6">
                <strong class="text-danger text-uppercase">Tất cả Account</strong>
            </div>
            <div class="col-md-6 text-right">
                <a href="@Url.Action("Create","Account")" class="btn btn-sm btn-success"> <i class="fas fa-plus"></i> Thêm Mới</a>
            </div>
        </div>
    </div>
    <div class="card-body">
        <table class="table">
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.UserName)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Password)
                </th>
                <th>
                    Tên Quyền
                </th>
                <th></th>
            </tr>

            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.UserName)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Password)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.QUYEN.TenQuyen)
                    </td>
                    <td>
                        <a href="@Url.Action("Edit", "Account", new { id = item.IdAccount })" class="btn btn-sm btn-info"> <i class="fas fa-edit"></i> Sửa </a>
                        <a href="@Url.Action("Details", "Account", new { id = item.IdAccount })" class="btn btn-sm btn-primary"> <i class="fas fa-eye"> Xem </i></a>
                        <a href="@Url.Action("Delete", "Account", new { id = item.IdAccount })" class="btn btn-sm btn-danger"> <i class="fas fa-trash"></i> Xóa </a>
                    </td>
                </tr>
            }

        </table>
    </div>
</div>