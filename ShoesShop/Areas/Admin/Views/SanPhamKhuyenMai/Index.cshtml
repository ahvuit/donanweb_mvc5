@model IEnumerable<ShoesShop.Models.CHITIETKHUYENMAI>

@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}

<div class="card">
    <div class="card-header">
        <div class="row">
            <div class="col-md-6">
                <strong class="text-danger text-uppercase">Quản lý sản phẩm khuyến mãi</strong>
            </div>
            <div class="col-md-6 text-right">
                <a href="@Url.Action("Create","SanPhamKhuyenMai")" class="btn btn-sm btn-success"> <i class="fas fa-plus"></i> Thêm Mới</a>
            </div>
        </div>
    </div>
    <div class="card-body">
        <table class="table">
            <tr>
                <th>
                    Tên sản phẩm
                </th>
                <th>
                    Tên khuyến mãi
                </th>
                <th>
                    Giá khuyến mãi
                </th>
                <th>
                    Update By
                </th>
                <th></th>
            </tr>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.SANPHAM.TenSanPham)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.KHUYENMAI.TenKhuyenMai)
                    </td>
                    <td>
                        @String.Format("{0:0,0}", item.GiaKM)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.UpdateBy)
                    </td>
                    <td>
                        <a href="@Url.Action("Edit", "SanPhamKhuyenMai", new { id = item.MaSP })" class="btn btn-sm btn-info"> <i class="fas fa-edit"></i> Sửa </a>
                        <a href="@Url.Action("Details", "SanPhamKhuyenMai", new { id = item.MaSP })" class="btn btn-sm btn-primary"> <i class="fas fa-eye"> Xem </i></a>
                        <a href="@Url.Action("Delete", "SanPhamKhuyenMai", new { id = item.MaSP })" class="btn btn-sm btn-danger"> <i class="fas fa-trash"></i> Xóa </a>
                    </td>
                </tr>
            }

        </table>

    </div>
</div>
