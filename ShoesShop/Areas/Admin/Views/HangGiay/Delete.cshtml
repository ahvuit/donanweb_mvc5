@model ShoesShop.Models.HANGGIAY

@{
    ViewBag.Title = "Delete";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}

<div>
    <div class="col-md-6">
        <strong class="text-danger text-uppercase">Xóa hãng giày</strong>
    </div>
    <hr />
    <dl class="dl-horizontal">

        <dt>
            Logo
        </dt>

        <dd>
            <img src="@Url.Content("~/Images/" +Model.Logo)" style=" width: 200px; height: 200px; margin:10px" />
        </dd>

        <dt>
            Tên hãng
        </dt>

        <dd>
            @Html.DisplayFor(model => model.TenHang)
        </dd>

        <dt>
            Thông tin
        </dt>

        <dd>
            @Html.DisplayFor(model => model.ThongTin)
        </dd>

    </dl>

    @using (Html.BeginForm()) {
        @Html.AntiForgeryToken()

        <div class="form-actions no-color">
            <input type="submit" value="Delete" class="btn btn-default" /> |
            @Html.ActionLink("Back to List", "Index")
        </div>
    }
</div>
